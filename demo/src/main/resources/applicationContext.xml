<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<bean id="dataSource" class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
		<property name="driverClass" value="com.mysql.jdbc.Driver"></property>
		<property name="url" value="jdbc:mysql://localhost/product"></property>
		<property name="username" value="product"></property>
		<property name="password" value="product"></property>
	</bean>
	<bean id="userService" class="com.example.user.service.TxProxyFactoryBean">
		<property name="target" ref="userServiceImpl"></property>
		<property name="transactionManager" ref="transactionManager"></property>
		<property name="pattern" value="upgradeLevels"></property>
		<property name="serviceInterface" value="com.example.user.service.UserService"></property>
	</bean>
	<bean id="userServiceImpl" class="com.example.user.service.UserServiceImpl">
		<property name="userDao" ref="userDao"></property>
		<property name="mailSender" ref="mailSender"></property>
	</bean>
	<bean id="userDao" class="com.example.user.dao.UserDaoJdbc">
		<property name="dataSource" ref="dataSource"></property>
	</bean>
	<bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource"></property>
	</bean>
	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<property name="host" value="mail.server.com"></property>
	</bean>
</beans>